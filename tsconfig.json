{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./", // This line specifies the base directory for module resolution.
    "paths": {
      "*": ["./*"] // Here, we map everything to the `src` directory.
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/index.js"
  ]
}
